<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefefe"
    tools:context="petro.presidencia.votacion.vuelta2.actividades.guiaActivity">
    <ImageView
        android:background="@color/morado_oscuro"
        android:padding="30dp"
        android:id="@+id/imagenban"
        android:adjustViewBounds="true"
        android:src="@drawable/splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout

        android:layout_below="@+id/imagenban"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_weight=".33"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/recomendaciones"
            android:onClick="dialogo"
            android:layout_height="0dp">

            <ImageView
                android:paddingLeft="10dp"
                android:src="@drawable/anon_reco"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="16dp"
                android:layout_margin="15dp"
                android:text="10 Recomendaciones para ser testigo electoral"
                android:textColor="@color/color_principal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:background="#e6e6e6"
            android:layout_width="match_parent"
            android:layout_weight=".33"
            android:gravity="center"
            android:padding="10dp"
            android:onClick="dialogo"
            android:id="@+id/reportarresultados"
            android:layout_height="0dp">

            <ImageView
                android:paddingLeft="10dp"
                android:src="@drawable/anon_como_repportar"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="16dp"
                android:layout_margin="15dp"
                android:text="Cómo reportar los resultados de escrutinio"
                android:layout_width="match_parent"
                android:textColor="@color/color_principal"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="10dp"
            android:onClick="dialogo"
            android:id="@+id/reportaranomalia"
            android:layout_weight=".33">

            <ImageView
                android:paddingLeft="10dp"
                android:src="@drawable/anon_anomalias"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Cómo reportar anomalías"
                android:textSize="16dp"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:textColor="@color/color_principal"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </LinearLayout>
    
</RelativeLayout>
