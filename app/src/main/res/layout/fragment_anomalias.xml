<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="petro.presidencia.votacion.subactividades.votacionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/jurados_votacion"
                android:onClick="denuncia"
                android:background="@drawable/linea_alrededoranomalias"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/color_principal"
                android:layout_weight=".5"
                android:text="JURADOS DE VOTACION"
                app:buttonTint="@color/color_principal"
                />

            <RadioButton
                android:id="@+id/limitaciones_al_derecho"
                android:onClick="denuncia"
                android:background="@drawable/linea_alrededoranomalias"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:textColor="@color/color_principal"
                app:buttonTint="@color/color_principal"
                android:text="LIMITACIONES AL DERECHO DE VOTO" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/censo_extracontemporaneo"
                android:onClick="denuncia"
                android:background="@drawable/linea_alrededoranomalias"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/color_principal"
                android:layout_weight=".5"
                app:buttonTint="@color/color_principal"
                android:text="CENTRO EXTEMPORANEO" />

            <RadioButton
                android:id="@+id/no_destruccion"
                android:onClick="denuncia"
                android:background="@drawable/linea_alrededoranomalias"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:textColor="@color/color_principal"
                app:buttonTint="@color/color_principal"
                android:text="NO DESTRUCCIÃ“N MATERIAL ELECTORAL" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/errores_en_el_conteo"
                android:onClick="denuncia"
                android:background="@drawable/linea_alrededoranomalias"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:buttonTint="@color/color_principal"
                android:textColor="@color/color_principal"
                android:layout_weight=".5"
                android:text="ERRORES EN EL CONTEO" />

            <RadioButton
                android:id="@+id/errores_e14"
                android:onClick="denuncia"
                android:background="@drawable/linea_alrededoranomalias"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:textColor="@color/color_principal"
                app:buttonTint="@color/color_principal"
                android:text="ERRORES EN EL FORMATO E14" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
