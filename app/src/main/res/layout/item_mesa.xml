<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="8dp"
    android:paddingTop="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <LinearLayout
        android:padding="7dp"
        android:background="@drawable/linea_item_mesa"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight=".3"
            android:id="@+id/nombre_mesa"
            android:gravity="center"
            android:textAllCaps="false"
            android:padding="20dp"
            android:textSize="22dp"
            android:text="Mesa 99"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight=".15"
                    android:src="@drawable/cara_ok"
                    android:layout_width="0dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_weight=".85"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView

                        android:textSize="17dp"
                        android:textColor="@color/morado_oscuro"
                        android:textStyle="bold"
                        android:text="Mesa Asignada a ti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="11dp"
                        android:text="Testigo está en la mesa"
                        android:textColor="@color/verde_raro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginBottom="3dp"
                android:textColor="#b4b4b4"
                android:textSize="12dp"
                android:text="Reporta cualquier anomalía que tengas."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="5dp"
                >
                <Button

                    android:layout_marginRight="5dp"
                    android:id="@+id/btn_enviar_resultados"
                    android:layout_weight=".6"
                    android:text="Enviar resultados"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:background="@drawable/boton_entrar_radio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn_enviar_anomalia"
                    android:layout_weight=".4"
                    android:text="Anomalías"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:background="@drawable/boton_entrar_radio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>